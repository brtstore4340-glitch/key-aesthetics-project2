{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vitest/globals"]
  },
  "include": ["client/src/**/*.ts", "client/src/**/*.tsx", "shared/**/*.ts", "functions/**/*.ts"],
  "exclude": ["node_modules", "dist", "build", "lib", "functions/**"]
}
